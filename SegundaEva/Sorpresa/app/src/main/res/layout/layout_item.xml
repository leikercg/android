<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Imagen a la izquierda -->
    <ImageView
        android:id="@+id/imagen"
        android:layout_width="155dp"
        android:layout_height="112dp"
        android:scaleType="centerInside"
        android:src="@drawable/nochenube" />

    <!-- TextView para nombre y nota a la derecha de la imagen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"> <!-- Margen para separar la imagen del texto -->

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"> <!-- Margen para separar la imagen del texto -->

            <TextView
                android:id="@+id/cordillera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:textStyle="normal" /> <!-- Separación con el siguiente TextView -->

            <TextView
                android:id="@+id/remontes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:textStyle="normal" /> <!-- Separación con el siguiente TextView -->

            <TextView
                android:id="@+id/km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
