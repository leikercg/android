<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/radioGroupDificultades"
        android:layout_width="184dp"
        android:layout_height="138dp"
        android:layout_marginTop="252dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonPrincipiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Principiante" />

        <RadioButton
            android:id="@+id/radioButtonAmateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amateur" />

        <RadioButton
            android:id="@+id/radioButtonAvanzado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avanzado" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="176dp"
        android:text="Seleciona la dificultad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>