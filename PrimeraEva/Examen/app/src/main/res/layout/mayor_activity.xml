<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewEdad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onclickDarFecha"
        android:text="dd/mm/aaaa"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextNombre1"
        app:layout_constraintEnd_toEndOf="@+id/textViewEdad2"
        app:layout_constraintStart_toStartOf="@+id/textViewEdad2" />

    <TextView
        android:id="@+id/textViewEdad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="55dp"
        android:hint="dd/mm/aaaa"
        android:onClick="onclickDarFecha1"
        android:text="dd/mm/aaaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextNombre2" />

    <EditText
        android:id="@+id/editTextNombre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="nombre1"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/editTextNombre2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="310dp"
        android:ems="10"
        android:hint="nombre2"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonVerMayor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="20dp"
        android:text="MAYOR"
        app:layout_constraintEnd_toStartOf="@+id/textViewEdad2"
        app:layout_constraintTop_toBottomOf="@+id/textViewEdad2" />
</androidx.constraintlayout.widget.ConstraintLayout>